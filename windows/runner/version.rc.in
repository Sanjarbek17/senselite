#include <windows.h>

#define VER_FILEVERSION             @SENSELITE_VERSION_MAJOR@,@SENSELITE_VERSION_MINOR@,@SENSELITE_VERSION_PATCH@,@SENSELITE_VERSION_BUILD@
#define VER_FILEVERSION_STR         "@SENSELITE_VERSION_MAJOR@.@SENSELITE_VERSION_MINOR@.@SENSELITE_VERSION_PATCH@.@SENSELITE_VERSION_BUILD@\0"

#define VER_PRODUCTVERSION          @SENSELITE_VERSION_MAJOR@,@SENSELITE_VERSION_MINOR@,@SENSELITE_VERSION_PATCH@,@SENSELITE_VERSION_BUILD@
